<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.freddymolano.up.AddActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <Spinner
        android:entries="@array/Ciudades"
        android:id="@+id/SpDestino"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/SpSalida"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/SpSalida"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginEnd="32dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:text="Destino"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="52dp"
        android:layout_height="22dp"
        android:text="Salida"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="45dp" />

    <Spinner
        android:entries="@array/Ciudades"
        android:id="@+id/SpSalida"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="0dp" />

    <EditText
        android:id="@+id/editTextFecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPrecio"
        app:layout_constraintLeft_toLeftOf="@+id/editTextPrecio"
        android:layout_marginEnd="32dp" />

    <EditText
        android:id="@+id/editTextPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginEnd="23dp"
        app:layout_constraintLeft_toLeftOf="@+id/SpDestino"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginRight="23dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/ButtonListarViaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡A viajar!"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.512" />
</android.support.constraint.ConstraintLayout>
